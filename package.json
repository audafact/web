    "lucide-react": "^0.517.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.0.0",
    "tailwindcss": "^3.0.0",
    "wavesurfer.js": "^7.10.0",
    "web-audio-beat-detector": "^8.2.29"
  },
